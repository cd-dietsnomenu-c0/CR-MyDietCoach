<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="24dp"
        android:elevation="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvInterval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="21.02.21 - 21.03.21"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#384c68"
                    android:textSize="18sp"/>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="30dp">

                    <TextView
                        android:id="@+id/tvCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        tools:text="90 л"
                        android:gravity="center_vertical"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_drop_marathon_small"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="90 дней"
                        android:gravity="center_vertical"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_duration_marathon_small"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="12sp"/>


                </FrameLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="38dp"
                app:cardCornerRadius="23dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_circle_marathon">



                    <TextView
                        android:id="@+id/tvPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:text="4"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"/>

                </FrameLayout>


            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>