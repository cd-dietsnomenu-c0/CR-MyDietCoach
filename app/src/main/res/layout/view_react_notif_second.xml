<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/shape_notification_background">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:src="@drawable/shape_left_notification_gradient"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mail"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="36dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/ivAvatarNotification"
            android:src="@drawable/second_notify_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNotificationTitle"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:text="Попробовала трекер диет - это бомба! Минус 6 кг всего за неделю :)"/>

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right_notification"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="8dp"/>

</FrameLayout>