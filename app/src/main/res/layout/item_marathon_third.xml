<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardCornerRadius="24dp"
        android:elevation="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Третье место"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#384c68"
                    android:textSize="22sp"/>


                <TextView
                    android:id="@+id/tvInterval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21.02.21 - 21.03.21"
                    android:textSize="13sp"
                    android:textColor="#384c68"
                    android:fontFamily="@font/roboto"/>

                <View
                    android:id="@+id/divider27"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="?android:attr/listDivider" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="90 л"
                        android:gravity="center_vertical"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_drop_marathon_small"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90 дней"
                        android:gravity="center_vertical"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_duration_marathon_small"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="12sp"/>


                </FrameLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivMedal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/img_third_place"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>