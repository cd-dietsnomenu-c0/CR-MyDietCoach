<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/WaterRV"
        android:layout_marginTop="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/water_title"
                    android:textColor="@color/tracker_text_medium"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lavSound"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical"
                        app:lottie_fileName="sound_turn.json"/>

                    <ImageView
                        android:id="@+id/ivNotifSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_notif_water" />

                    <ImageView
                        android:id="@+id/ivParams"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_statistics" />

                </LinearLayout>


            </FrameLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <androidx.cardview.widget.CardView
                            android:layout_width="240dp"
                            android:layout_height="240dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="4dp"
                            app:cardCornerRadius="120dp"
                            app:cardElevation="3dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.scwang.wave.MultiWaveHeader
                                    android:id="@+id/wvProgress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:scaleY="-1"
                                    app:mwhWaveHeight="10dp" />


                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:id="@+id/lavBubbles"
                                    app:lottie_fileName="bubble.json"/>

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    app:lottie_fileName="water_done.json"
                                    android:layout_gravity="center"
                                    android:id="@+id/lavDone" />

                                <TextView
                                    android:id="@+id/tvDone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="24dp"
                                    android:text="Норма на сегодня выполнена!\n Вы молодец 🏆"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_bold"
                                    android:alpha="0"/>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/shape_border_water_main_control" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvWaterShowcase"
                                    android:layout_width="140dp"
                                    android:layout_height="140dp"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:translationY="60dp"
                                    app:cardCornerRadius="70dp"
                                    app:cardElevation="3dp">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">


                                        <TextView
                                            android:id="@+id/tvPercent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="12dp"
                                            android:fontFamily="@font/roboto_bold"
                                            android:text="0%"
                                            android:textColor="@color/water_positive"
                                            android:textSize="24sp" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/tvCapacity"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/roboto_medium"
                                                android:text="0"
                                                android:textColor="@color/water_positive"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:id="@+id/tvDivider"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/roboto_medium"
                                                android:text="/"
                                                android:textColor="@color/water_positive"
                                                android:textSize="16sp" />

                                            <TextView
                                                android:id="@+id/tvRate"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/roboto_medium"
                                                android:text="0"
                                                android:textColor="@color/water_positive"
                                                android:textSize="16sp" />


                                        </LinearLayout>




                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                            </FrameLayout>


                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvTraining"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                app:cardCornerRadius="16dp"
                                android:elevation="2dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_marginTop="12dp"
                                        android:layout_marginStart="12dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_water_training"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginBottom="4dp"
                                        android:text="@string/water_sport"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>

                                </LinearLayout>

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="bottom|end"
                                    android:id="@+id/lavTraining"
                                    app:lottie_fileName="complete_water.json"
                                    app:lottie_speed="2"
                                    />

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvHot"
                                android:layout_width="90dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="1dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_marginTop="8dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_water_therm"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginBottom="4dp"
                                        android:text="@string/water_hot"
                                        android:fontFamily="@font/roboto_medium"
                                        android:textSize="14sp"
                                        android:layout_marginTop="4dp"/>

                                </LinearLayout>

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="bottom|end"
                                    android:id="@+id/lavHot"
                                    app:lottie_speed="2"
                                    app:lottie_fileName="complete_water.json"
                                    />

                            </androidx.cardview.widget.CardView>





                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvMarathon"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:drawableTop="@drawable/ic_water_marathon"
                            android:fontFamily="@font/roboto_medium"
                            android:drawablePadding="2dp"
                            android:text="4 дня"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                        <View
                            android:id="@+id/divider24"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="#e7e6eb" />


                        <TextView
                            android:id="@+id/tvFrequentDrink"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            android:gravity="center_horizontal"
                            android:drawableTop="@drawable/ic_like_water"
                            android:drawablePadding="2dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                        <View
                            android:id="@+id/divider25"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="1"
                            android:background="#e7e6eb" />


                        <TextView
                            android:id="@+id/tvGlobalWater"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="16dp"
                            android:drawableTop="@drawable/ic_water_glass"
                            android:drawablePadding="2dp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:text="0 л"/>


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuickDrink"
                android:theme="@style/WaterRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#3E070707"
        android:visibility="gone"
        android:id="@+id/ivDimBackground"/>

    <include layout="@layout/bottom_water_settings" />
    <include layout="@layout/bottom_begin_meas" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>