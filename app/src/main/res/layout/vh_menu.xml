<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivTitleImageDietPlan"
        android:src="@drawable/img_menu"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvDietPlanTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Меню на неделю для куриной диеты"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTextDietPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/roboto"
        android:text="Во время куриной диеты нужно пить достаточное количество воды (30 мл на 1 кг веса), также допустимы травяные чаи. Лучше всего для диеты выбирать белое мясо, ведь оно содержит меньше всего калорий. Куриную грудку можно отваривать, готовить на пару, запекать, но только не жарить. Калорийность вашего дневного рациона не должна превышать больше 1200 ккал."
        android:textColor="@color/text_color_small" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/rvDietDays"
        android:layout_marginBottom="8dp"/>
</LinearLayout>