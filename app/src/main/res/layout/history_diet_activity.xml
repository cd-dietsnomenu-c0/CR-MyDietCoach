<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivHead"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/head_newdiets" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cvTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="100dp"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Куриная диета"
                        android:textColor="#32374c"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Начало"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="12.12.1992"
                                android:textColor="#32374c" />

                        </LinearLayout>


                        <View
                            android:id="@+id/divider28"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="#efefef" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Длительность"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="10 дней"
                                android:textColor="#32374c" />

                        </LinearLayout>


                        <View
                            android:id="@+id/divider29"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="#efefef" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/roboto_medium"
                                android:text="Конец"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="22.12.1992"
                                android:textColor="#32374c" />

                        </LinearLayout>
                    </LinearLayout>






                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardView7"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                app:cardCornerRadius="75dp"
                app:cardElevation="10dp"/>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavWin"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:elevation="11dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="win_diet.json" />

        </FrameLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="16dp">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/ic_broken_heart" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Потеряно"
                            android:textSize="10sp" />
                        <TextView
                            android:id="@+id/tvLostDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="4 жизни"
                            android:textColor="#32374c"
                            android:textSize="18sp" />




                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:src="@drawable/level_three" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Сложность"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvDifficulty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Тяжелая"
                            android:textColor="#32374c"
                            android:textSize="18sp" />




                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сложность прохождения"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#32374c"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Очень легко"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#32374c"/>

                <com.diets.weightloss.views.FixedSeekbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@style/SeekbarHistoryDifficulty"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:max="4"
                    android:maxHeight="8dp"
                    android:layout_marginBottom="24dp"
                    android:thumb="@drawable/ic_diff_scrubber"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"/>




            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Оценка диете"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#32374c"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Нормально"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:textSize="24sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#32374c"/>

                <com.diets.weightloss.views.FixedSeekbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@style/SeekbarHistoryGrade"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:max="4"
                    android:maxHeight="8dp"
                    android:layout_marginBottom="24dp"
                    android:thumb="@drawable/ic_grade_scrubber"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"/>




            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    app:lottie_fileName="review_history.json"
                    app:lottie_autoPlay="true"
                    app:lottie_speed="0.5"
                    app:lottie_repeatMode="reverse"
                    app:lottie_loop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отзыв"
                    android:textColor="#32374c"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"/>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="top"
                    style="@style/ReviewHistory"
                    android:paddingTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"
                    android:hint="Место для вашего отзыва"
                    android:background="@drawable/shape_border_review"
                    android:layout_marginBottom="24dp"
                    android:textColor="#32374c"/>






            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>