    <ImageView
        android:id="@+id/ivSeventhDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivSixthDay"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSeventhDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivSeventhDay"
        app:layout_constraintEnd_toEndOf="@+id/ivSeventhDay"
        app:layout_constraintStart_toStartOf="@+id/ivSeventhDay"
        app:layout_constraintTop_toTopOf="@+id/ivSeventhDay" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavSeventhDay"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivSeventhDay"
