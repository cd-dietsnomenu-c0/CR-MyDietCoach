<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                app:srcCompat="@drawable/ic_timer_notification" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Частота напоминаний"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_medium"/>

            <RadioGroup
                android:id="@+id/rgFrequent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb30min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каждые 30 минут"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"/>

                <RadioButton
                    android:id="@+id/rb60min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каждый час"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"/>

                <RadioButton
                    android:id="@+id/rb90min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каждые 1.5 часа"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"/>

                <RadioButton
                    android:id="@+id/rb120min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каждые 2 часа"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"/>

                <RadioButton
                    android:id="@+id/rb150min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каждые 2.5 часа"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"/>

                <RadioButton
                    android:id="@+id/rb180min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каждые 3 часа"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="36dp"
                    android:paddingEnd="36dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_cancel_frequent_notif"
                    android:text="отмена"
                    android:paddingHorizontal="22dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="8dp"
                    android:textSize="10sp" />



                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="36dp"
                    android:paddingEnd="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/shape_understand_frequent_notif"
                    android:text="сохранить"
                    android:paddingHorizontal="22dp"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>