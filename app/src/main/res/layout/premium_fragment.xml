<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/ic_close_white_prem"
            android:visibility="invisible" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_fileName="prem_man.json"
            app:lottie_loop="true"
            app:lottie_speed="0.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.07"
            android:text="@string/remove_ads_white"
            android:textColor="#1e1e1e"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="36dp"
            android:gravity="center_horizontal"
            android:letterSpacing="0.07"
            android:text="@string/remove_ads_white_text"
            android:textSize="12sp"
            android:textStyle="normal" />

        <FrameLayout
            android:id="@+id/flMonth"
            android:layout_width="380dp"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBackMonth"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                app:srcCompat="@drawable/selector_price_white_shout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.07"
                android:text="@string/white_month"
                android:textColor="#1e1e1e"
                android:textSize="18sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tvMonthTerms"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.07"
                android:text="@string/description_month"
                android:textColor="#1e1e1e"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvMonthPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:letterSpacing="0.07"
                android:text="$1,99 "
                android:textColor="#1e1e1e"
                android:textSize="18sp"
                android:textStyle="normal" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="20dp"
                android:visibility="invisible">


                <TextView
                    android:id="@+id/tvOldMonthPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:letterSpacing="0.07"
                    android:text="$7"
                    android:textColor="#f7413b"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#f7413b" />


            </FrameLayout>


        </FrameLayout>

        <FrameLayout
            android:id="@+id/flYear"
            android:layout_width="380dp"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <ImageView
                android:id="@+id/ivBackYear"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:src="@drawable/selector_price_white_shout" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.07"
                    android:text="@string/white_year"
                    android:textColor="#1e1e1e"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_sale_white_prem" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvYearTerms"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.07"
                android:text="@string/description_year"
                android:textColor="#1e1e1e"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvYearPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="13dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                android:letterSpacing="0.07"
                android:text="$1,99 "
                android:textColor="#1e1e1e"
                android:textSize="18sp"
                android:textStyle="normal" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="20dp">


                <TextView
                    android:id="@+id/tvOldYearPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif"
                    android:gravity="end"
                    android:letterSpacing="0.07"
                    android:text="$7"
                    android:textColor="#f7413b"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="#f7413b" />


            </FrameLayout>


        </FrameLayout>

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_btn_buy_white"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="2sp"
            android:paddingStart="33dp"
            android:paddingTop="16dp"
            android:paddingEnd="33dp"
            android:paddingBottom="16dp"
            android:text="@string/try_7_days_for_free_new"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/tvPlayTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:letterSpacing="0.07"
            android:textColor="#c5c5c5"
            android:textSize="12sp"
            android:textStyle="normal" />


    </LinearLayout>

</ScrollView>