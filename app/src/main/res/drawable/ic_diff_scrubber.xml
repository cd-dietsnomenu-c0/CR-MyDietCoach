<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:height="27dp"
        android:width="27dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#9E9D9D"/>

        </shape>
    </item>

    <item android:height="27dp"
        android:width="27dp"
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/white"/>

        </shape>
    </item>

    <item android:height="18dp"
        android:width="18dp"
        android:gravity="center">
        <shape android:shape="oval">

            <gradient
                android:startColor="#ff5579"
                android:endColor="#FD859E"
                android:angle="90"/>

        </shape>
    </item>


</layer-list>